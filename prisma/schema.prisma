generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             Int       @id @default(autoincrement())
  username       String?
  firstName      String?
  lastName       String?
  country        String?
  avatar         String?
  email          String    @unique
  password       String
  cart           Cart[]
  paymentDetails PaymentDetails?
  purchases      Purchase[]
}

model Cart {
  id     Int    @id @default(autoincrement())
  gameId String?
  qty    Int?
  userId Int   
  user   User   @relation(fields: [userId], references: [id])
}

model PaymentDetails {
  id          Int    @id @default(autoincrement())
  cardNumber  String?
  expiry      String?
  cvv         String?
  userId      Int  @unique
  user        User   @relation(fields: [userId], references: [id])
}

model Purchase {
  id     Int    @id @default(autoincrement())
  gameId String?
  qty    Int?
  userId Int    
  user   User   @relation(fields: [userId], references: [id])
}
